<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../components/head') %>
    <title>Matches</title>
</head>

<body>
    <header>
        <nav>
            <ul class="left">
                <li>
                    <a href="/">
                        <span class="heart"></span>
                    </a>
                </li>
            </ul>
        </nav>
    </header>
    <main>
        <h1>Matches</h1>
        <label class="toggle" for="toggle-remove">
            <span class="edit"></span>
            Remove matches
        </label>
        <input type="checkbox" name="toggle" id="toggle-remove">
        <% if(dogs) { %>
            <ul class="matches-container">
                <% dogs.forEach(dog => { %>
                    <li>
                        <form action="/removeMatch" method="post" class="remove">
                            <button type="submit" name="remove" value="<%= dog._id %>">x</button>
                        </form>
                        <div class="match-wrapper">
                            <p>
                                <strong>
                                     <%= dog.name %>
                                </strong>
                            </p>                                
                        </div>
                        <form action="#">
                            <button class="walk" type="button">let's walk together</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>Go out and find matches!</p>
            <a href="/">Let's swipe</a>
        <% } %>
    </main>
    <%- include ('../components/footer') %>
</body>

</html>